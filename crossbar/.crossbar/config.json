{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [".."]
            },
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                               {
                                  "uri": "",
                                  "match": "prefix",
                                  "allow": {
                                     "call": true,
                                     "register": true,
                                     "publish": true,
                                     "subscribe": true
                                  },
                                  "disclose": {
                                     "caller": true,
                                     "publisher": true
                                  },
                                  "cache": true
                               }
                            ]
                         }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "websocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 4000
                    },
                    "url": "ws://localhost:4000",
                    "options": {
                      "auto_ping_interval": 1000,
                      "auto_ping_timeout": 20000,
                      "auto_ping_size": 4
                    }
                }
            ],
            "components": [
            ]
        }
    ]
}
